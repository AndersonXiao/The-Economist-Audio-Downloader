<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="需要您的授权"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/color_222222"
            android:background="@drawable/white_top_drawable_r4"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ededed"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="退出"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="@color/color_222222"
                android:background="@drawable/white_left_drawable_r4"/>

            <TextView
                android:id="@+id/tv_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="授权"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="@color/color_ec4c48"
                android:background="@drawable/white_right_drawable_r4"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>